<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/image_skill"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:src="@drawable/skill_ss_one" />


    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_namaSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Nama"
            android:textColor="#949BA7"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gradeSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Grade : "
                android:textColor="#949BA7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_APIgradeSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/varealround_regular"
                android:text="Grade"
                android:textColor="#CF0FFF"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_damageSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Demage : "
                android:textColor="#949BA7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_APIdamageSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/varealround_regular"
                android:text="Demage"
                android:textColor="#CF0FFF"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rateSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Proc Rate : "
                android:textColor="#949BA7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_APIrateSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/varealround_regular"
                android:text="Proc Rate"
                android:textColor="#CF0FFF"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chakraSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chakra : "
                android:textColor="#949BA7"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_APIchakraSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/varealround_regular"
                android:text="Chakra"
                android:textColor="#CF0FFF"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>