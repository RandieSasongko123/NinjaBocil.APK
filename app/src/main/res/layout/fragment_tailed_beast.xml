<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TailedBeastFragment"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_tailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_search"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_tailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_tailed"
        android:text="@string/judulTailed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#949BA7"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/tailed_data"
        android:layout_below="@+id/tv_tailed"
        />

</RelativeLayout>