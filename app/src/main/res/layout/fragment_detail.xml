<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".fragment.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_tentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tentang"
            android:textAlignment="center"
            android:textColor="#949BA7"
            android:textSize="24dp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gl_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#232734"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailnama_hero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:text="Naruto Baryon"
                        android:textColor="#949BA7"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/apiprof" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/tv_judulG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grade"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_apiGrade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grade"
                                android:textColor="#CF0FFF"
                                android:textSize="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/tv_judulQ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quality"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_apiQuality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quality"
                                android:textColor="#CF0FFF"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/tv_judulGP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="G. Point"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_apiGP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="G. Point"
                                android:textColor="#CF0FFF"
                                android:textSize="12dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/oval"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/tv_judulC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chakra"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_apiChakra"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chakra"
                                android:textColor="#CF0FFF"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="NHBD"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#232734"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="Skill"
                        android:textSize="20dp"
                        android:textColor="#949BA7"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tv_apiSkill1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSkill2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSkill3"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSkill4"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSkill5"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="Summon School"
                        android:textSize="20dp"
                        android:textColor="#949BA7"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tv_apiSummon1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSummon2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiSummon3"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="15dp"
                        android:text="Tailed Beast"
                        android:textSize="20dp"
                        android:textColor="#949BA7"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tv_apiTailed1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:src="@drawable/skill_ss_one" />

                        <ImageView
                            android:id="@+id/tv_apiTailed2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/skill_ss_one" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>


</ScrollView>