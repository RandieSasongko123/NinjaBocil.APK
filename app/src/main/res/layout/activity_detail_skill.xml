<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minato"
    tools:context=".fragment.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <GridLayout
            android:id="@+id/gl_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#232734"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailnama_skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/varealround_regular"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:text="Shadow Clone Rasengan"
                        android:textColor="#949BA7"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <VideoView
                            android:id="@+id/vv_previewSkill"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="6dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#232734"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/varealround_regular"
                        android:text="Detail Skill"
                        android:textColor="#949BA7"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="15dp"
                        android:stretchColumns="1"
                        android:shrinkColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Grade"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiGradeSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:paddingLeft="10dp"
                                android:text="S"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Chakra"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiChakraSkillDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Wind, Lightning"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:paddingRight="10dp"
                                android:text="Damage"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiDamageSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="240% Strength"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:paddingRight="10dp"
                                android:text="Skill effect"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiEffectSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Create Rasengan through Shadow Clone to cuase a magnificent strikee"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Round of duration"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiRoundSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="1"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Launch time"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiLaunchSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="When players attacks"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Proc. Rate"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiRateSkillDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="20%"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="Restriction"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text=" : "
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_apiRestrictionSkillDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:fontFamily="@font/varealround_regular"
                                android:padding="5dp"
                                android:text="It launches 2 time per battle"
                                android:textColor="#949BA7"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>


</ScrollView>