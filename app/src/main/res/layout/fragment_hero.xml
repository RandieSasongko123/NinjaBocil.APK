<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TailedBeastFragment"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_tailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_search"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/tv_hero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sv_tailed"
        android:text="Karakter"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#949BA7"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/hero_data"
        android:layout_below="@+id/tv_hero"
        />

</RelativeLayout>