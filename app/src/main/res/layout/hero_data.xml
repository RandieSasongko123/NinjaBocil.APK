<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/rounded"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/image_hero"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/skill_ss_one"
        android:padding="5dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tv_namaHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Nama"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#949BA7"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gradeHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Grade : "
                android:textColor="#949BA7"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_APIgradeHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Grade"
                android:textColor="#CF0FFF"
                android:textSize="18dp"
                android:fontFamily="@font/varealround_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chakraHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chakra : "
                android:textColor="#949BA7"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_APIchakraHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Chakra"
                android:textColor="#CF0FFF"
                android:textSize="18dp"
                android:fontFamily="@font/varealround_regular"/>

        </LinearLayout>


        </LinearLayout>

</LinearLayout>